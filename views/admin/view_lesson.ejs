    <script>
        $('#zero_config').on('click','.tombol-edit', function(){
            let id = $(this).data('id');
            let name = $(this).data('name');
            let video = $(this).data('video');
            let chapter_id = $(this).data('chapter_id');
            


            $('#full-width-modal-edit').modal('show');
            $('.id').val(id);
            $('.video').val(video);
            $('.name').val(name);
            $('.chapter_id').val(chapter_id);
           
        })
    </script>
