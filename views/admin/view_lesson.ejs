    <div id="full-width-modal" class="modal fade" tabindex="-1" role="dialog"
    aria-labelledby="fullWidthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-full-width">
        <div class="modal-content">
            <form action="/dashboard/lesson" method="POST">
            <div class="modal-header">
                <h4 class="modal-title" id="fullWidthModalLabel">Add Data Lesson</h4>
                <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label for="">Lesson Name</label>
                        <input type="text" class="form-control" name="name" id="placeholder"
                            placeholder="Chapter Name" required>
                    </div>
                    <div class="form-group">
                        <label for="">Video URL</label>
                        <input type="text" class="form-control" name="video" id="placeholder"
                            placeholder="Video URL" required>
                    </div>
                    <div class="form-group">
                        <label for="">Chapter Id</label>
                        <input type="text" class="form-control" name="chapter_id" id="placeholder"
                            placeholder="Chapter Id" >
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light"
                    data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            
        </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="full-width-modal-edit" class="modal fade" tabindex="-1" role="dialog2"
aria-labelledby="fullWidthModalLabel" aria-hidden="true">
<div class="modal-dialog modal-full-width">
    <div class="modal-content">
        <form action="/dashboard/lesson?_method=PUT" method="POST">
            <div class="form-group">
                <input type="hidden" class="form-control id" name="id">
            </div>
        <div class="modal-header">
            <h4 class="modal-title" id="fullWidthModalLabel">Edit Data Lesson</h4>
            <button type="button" class="close" data-dismiss="modal"
                aria-hidden="true">×</button>
        </div>
        <div class="modal-body">
                <div class="form-group">
                    <label for="">Lesson Name</label>
                    <input type="text" class="form-control name" name="name" id="placeholder"
                        placeholder="Lesson Name" required>
                </div>
                <div class="form-group">
                    <label for="">Video URL</label>
                    <input type="text" class="form-control video" name="video" id="placeholder"
                        placeholder="Video URL" required>
                </div>
                <div class="form-group">
                    <label for="">Chapter Id</label>
                    <input type="text" class="form-control chapter_id" name="chapter_id" id="placeholder"
                        placeholder="Chapter Id" >
                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light"
                data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
        
    </form>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

   
