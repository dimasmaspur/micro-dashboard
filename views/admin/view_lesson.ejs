            <div class="container-fluid">
                <button type="button" class="btn waves-effect waves-light btn-primary mb-3" data-toggle="modal"
                data-target="#full-width-modal">Add Data</button>
                 <!-- basic table -->
                 <% if(alert.message != "") {%>
                    <div class="alert alert-<%= alert.status %>" role="alert">
                        <%= alert.message %>
                      </div>
                    <% } %>
                 <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Name</th>
                                                <th>Video URL</th>
                                                <th>Chapter Id</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0; i < dataLesson.length; i++){ %>
                                                <tr>
                                                    <td><%= i+1 %></td>
                                                    <td><%= dataLesson[i].name %></td>
                                                    <td><%= dataLesson[i].video %></td>
                                                    <td><%= dataLesson[i].chapter_id %></td>
                                                    <td>
                                                        <form action="/dashboard/lesson/<%= dataLesson[i].id %>?_method=DELETE" method="POST">
                                                        <a href="javascript:void()" type="button" class="btn waves-effect waves-light btn-warning tombol-edit" data-toggle="modal"
                                                        data-target="#full-width-modal-edit" data-id="<%= dataLesson[i].id %>"  data-video="<%= dataLesson[i].video %>" data-name="<%= dataLesson[i].name %>" data-chapter_id="<%= dataLesson[i].chapter_id %>"><i data-feather="edit" class="feather-icon"></i></a>
                                                            <button type="submit" class="btn waves-effect waves-light btn-danger"><i data-feather="delete" class="feather-icon"></i></button></td>
                                                        </form>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
