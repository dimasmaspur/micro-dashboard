    <!-- Full width modal content -->
    <div id="full-width-modal" class="modal fade" tabindex="-1" role="dialog"
    aria-labelledby="fullWidthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-full-width">
        <div class="modal-content">
            <form action="/dashboard/course" method="POST">
            <div class="modal-header">
                <h4 class="modal-title" id="fullWidthModalLabel">Add Data Course</h4>
                <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label for="">Course Name</label>
                        <input type="text" class="form-control" name="name" id="placeholder"
                            placeholder="Course Name" required>
                    </div>
                    <div class="form-group">
                        <label for="">Thumbnail</label>
                        <input type="text" class="form-control" name="thumbnail" id="placeholder"
                            placeholder="Url Thumbnail" >
                    </div>
                    <div class="custom-control custom-radio mb-3">
                        <input type="checkbox" id="customRadio1" value="1" name="certificate"
                        class="custom-control-input">
                        <label class="custom-control-label" for="customRadio1">Certificate</label>
                    </div>
                    <label for="">Type</label><br>
                    <div class="form-check form-check-inline">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="customControlValidation2"
                                name="type" value="free">
                            <label class="custom-control-label" for="customControlValidation2">Free</label>
                        </div>
                    </div>
                    <div class="form-check form-check-inline">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="customControlValidation3"
                                name="type" value="premium">
                            <label class="custom-control-label" for="customControlValidation3">Premium</label>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Price</label>
                        <input type="number" class="form-control" id="placeholder"
                            placeholder="Price" value="0" name="price">
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label class="mr-sm-2" for="inlineFormCustomSelect">Status</label>
                        <select class="custom-select mr-sm-2" name="status" id="inlineFormCustomSelect" required>
                            <option selected>Choose...</option>
                            <option value="published">Published</option>
                            <option value="draft">Draft</option>
                        </select>
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label class="mr-sm-2" for="inlineFormCustomSelect">Level</label>
                        <select class="custom-select mr-sm-2"  name="level" id="inlineFormCustomSelect" required>
                            <option selected>Choose...</option>
                            <option value="all-level">All Level</option>
                            <option value="beginner">Beginner</option>
                            <option value="intermediate">Tntermediate</option>
                            <option value="advance">Advance</option>
                        </select>
                    </div>
                    <div class="form-group mt-3 ">
                        <label for="">Description</label>
                        <input type="text" class="form-control" name="description" id="placeholder"
                            placeholder="Description">
                    </div>
                    <div class="form-group">
                        <label for="">Mentor Id</label>
                        <input type="number" class="form-control" name="mentor_id" id="placeholder"
                            placeholder="Mentor Id" required>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light"
                    data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            
        </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


