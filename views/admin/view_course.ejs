                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Name</th>
                                                <th>Thumbnail Url</th>
                                                <th>Type</th>
                                                <th>Status</th>
                                                <th>Price</th>
                                                <th>Level</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0; i < dataCourse.length; i++){ %>
                                                <tr>
                                                    <td><%= i+1 %></td>
                                                    <td><%= dataCourse[i].name %></td>
                                                    <td><%= dataCourse[i].thumbnail %></td>
                                                    <td><%= dataCourse[i].type %></td>
                                                    <td><%= dataCourse[i].status %></td>
                                                    <td><%= dataCourse[i].price %></td>
                                                    <td><%= dataCourse[i].level %></td>
                                                    <td><%= dataCourse[i].description %></td>
                                                    <td><button type="button" class="btn waves-effect waves-light btn-danger"><i data-feather="delete" class="feather-icon"></i></button></td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
