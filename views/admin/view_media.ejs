            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <button type="button" class="btn waves-effect waves-light btn-primary mb-3" data-toggle="modal"
                data-target="#full-width-modal">Add Media</button>
                <p>Please Copy Url Image</p>
                 <!-- basic table -->
                 <% if(alert.message != "") {%>
                    <div class="alert alert-<%= alert.status %>" role="alert">
                        <%= alert.message %>
                      </div>
                    <% } %>
                 <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Image</th>
                                                <th>Url Image</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0; i < dataMedia.length; i++){ %>
                                                <tr>
                                                    <td><%= i+1 %></td>
                                                    <td><img src="<%= dataMedia[i].image %>" width="100" alt="image"></td>
                                                    <td><%= dataMedia[i].image %></td>
                                                    <td>
                                                        <form action="/dashboard/media/<%= dataMedia[i].id %>?_method=DELETE" method="POST">
                                                        <button type="submit" class="btn waves-effect waves-light btn-danger"><i data-feather="delete" class="feather-icon"></i></button></td>
                                                    </form>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
