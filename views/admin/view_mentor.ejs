    <script>
        $('#zero_config').on('click','.tombol-edit', function(){
            let id = $(this).data('id');
            let name = $(this).data('name');
            let profile = $(this).data('profile');
            let email = $(this).data('email');
            let profession= $(this).data('profession');
            


            $('#full-width-modal-edit').modal('show');
            $('.id').val(id);
            $('.profile').val(profile);
            $('.name').val(name);
            $('.email').val(email);
            $('.profession').val(profession);
           
        })
    </script>
