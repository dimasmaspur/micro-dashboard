    <div id="full-width-modal" class="modal fade" tabindex="-1" role="dialog"
    aria-labelledby="fullWidthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-full-width">
        <div class="modal-content">
            <form action="/dashboard/mentor" method="POST">
            <div class="modal-header">
                <h4 class="modal-title" id="fullWidthModalLabel">Add Data Mentor</h4>
                <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label for="">Mentor Name</label>
                        <input type="text" class="form-control" name="name" id="placeholder"
                            placeholder="Mentor Name" required>
                    </div>
                    <div class="form-group">
                        <label for="">Profile Url</label>
                        <input type="text" class="form-control" name="profile" id="placeholder"
                            placeholder="Profile Url" required>
                    </div>
                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="text" class="form-control" name="email" id="placeholder"
                            placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="">Profession</label>
                        <input type="text" class="form-control" name="profession" id="placeholder"
                            placeholder="Profession" >
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light"
                    data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            
        </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="full-width-modal-edit" class="modal fade" tabindex="-1" role="dialog2"
aria-labelledby="fullWidthModalLabel" aria-hidden="true">
<div class="modal-dialog modal-full-width">
    <div class="modal-content">
        <form action="/dashboard/mentor?_method=PUT" method="POST">
            <div class="form-group">
                <input type="hidden" class="form-control id" name="id">
            </div>
        <div class="modal-header">
            <h4 class="modal-title" id="fullWidthModalLabel">Edit Data Mentor</h4>
            <button type="button" class="close" data-dismiss="modal"
                aria-hidden="true">×</button>
        </div>
        <div class="modal-body">
                <div class="form-group">
                    <label for="">Mentor Name</label>
                    <input type="text" class="form-control name" name="name" id="placeholder"
                        placeholder="Lesson Name" required>
                </div>
                <div class="form-group">
                    <label for="">Profile URL</label>
                    <input type="text" class="form-control profile" name="profile" id="placeholder"
                        placeholder="Profile URL" required>
                </div>
                <div class="form-group">
                    <label for="">email</label>
                    <input type="text" class="form-control email" name="email" id="placeholder"
                        placeholder="email" required>
                </div>
                <div class="form-group">
                    <label for="">Profession</label>
                    <input type="text" class="form-control profession" name="profession" id="placeholder"
                        placeholder="Profession" >
                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light"
                data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
        
    </form>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

   
