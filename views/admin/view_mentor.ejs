                 <!-- basic table -->
                 <% if(alert.message != "") {%>
                    <div class="alert alert-<%= alert.status %>" role="alert">
                        <%= alert.message %>
                      </div>
                    <% } %>
                 <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Name</th>
                                                <th>Profile Url</th>
                                                <th>Email</th>
                                                <th>Profession</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0; i < dataMentor.length; i++){ %>
                                                <tr>
                                                    <td><%= i+1 %></td>
                                                    <td><%= dataMentor[i].name %></td>
                                                    <td><%= dataMentor[i].profile %></td>
                                                    <td><%= dataMentor[i].email %></td>
                                                    <td><%= dataMentor[i].profession %></td>
                                                    <td>
                                                        <form action="/dashboard/mentor/<%= dataMentor[i].id %>?_method=DELETE" method="POST">
                                                        <a href="javascript:void()" type="button" class="btn waves-effect waves-light btn-warning tombol-edit" data-toggle="modal"
                                                        data-target="#full-width-modal-edit" data-id="<%= dataMentor[i].id %>"  data-profile="<%= dataMentor[i].profile %>" data-name="<%= dataMentor[i].name %>" data-email="<%= dataMentor[i].email %>" data-profession="<%= dataMentor[i].profession %>"><i data-feather="edit" class="feather-icon"></i></a>
                                                            <button type="submit" class="btn waves-effect waves-light btn-danger"><i data-feather="delete" class="feather-icon"></i></button></td>
                                                        </form>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
